<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:padding="5dp"
    app:barrierMargin="5dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/regionImg"
        android:layout_width="190dp"
        android:layout_height="130dp"
        android:layout_margin="5dp"
        android:elevation="3dp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        app:srcCompat="@color/background" />

    <TextView
        android:id="@+id/regionName"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="5dp"
        android:gravity="center"
        android:text="TextView"
        android:shadowColor="@color/secondary"
        android:shadowDx="2"
        android:shadowRadius="5"
        android:textColor="@color/primary_varient"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/regionImg"
        app:layout_constraintEnd_toEndOf="@+id/regionImg"
        app:layout_constraintStart_toStartOf="@+id/regionImg"
        app:layout_constraintTop_toTopOf="@+id/regionImg" />
</androidx.constraintlayout.widget.ConstraintLayout>